<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">

    <!-- If IE use the latest rendering engine -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Set the page to the width of the device and set the zoon level -->
    <meta name="viewport" content="width = device-width, initial-scale = 1">
    <title>Hotel Management System - Pricing</title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style>
        /* ------------------------------------------- MAIN.CSS --------------------------------------------------------*/
      body,
      html {
         height: 100%;
         font-family: Verdana, Geneva, Tahoma, sans-serif;
      }

      .row {
          margin:0px;
      }

      .container {
        padding-right: 0px;
        padding-left: 0px;
      }

      .container-fluid {
         padding: 0px;
      }

      .glyphicon.glyphicon-home {
         font-size: 20px;
         color: rgba(189, 211, 21, 0.9);
      }

      .nav-tabs,
      .nav-pills {
         font-family: Verdana, Geneva, Tahoma, sans-serif;
         text-align: center;
         height: 20%;
         margin-bottom: 0;
      }

      .nav-tabs>li,
      .nav-pills>li {
         float: none;
         display: inline-block;
         *display: inline;
         /* ie7 fix */
         zoom: 1;
         /* hasLayout ie7 trigger */

      }

      /* Main menu options */
      .nav>li>a {
         padding-top: 20px;
         padding-bottom: 20px;
         color: whitesmoke;
      }

      .nav>li>a:hover {
         background-color: rgba(189, 211, 21, 0.9);
      }

      #change-price {
        padding-bottom: 30px;
      }

      #header {
         background-color: rgba(0, 0, 0, 0.9);
         position: relative;
         width: 100%;
         left: 0;
      }

      #login-btn {
         margin-top: 12%;
         display: inline-block;
      }

      #profile-indicator {
         padding-top: 10px;
         text-align: center;
      }

      /* ------------------------------------------- MAIN.CSS --------------------------------------------------------*/

        /* div[class="row"] {
outline: 3px dotted rgb(234, 0, 255);
}  */

/* div[class="container"] {
outline: 4px dotted rgba(0, 0, 0, 1);
background-color: rgb(100, 0, 0, 0.2);
}  */
/* 
      div[class^="col"] {
outline: 3px dotted rgb(189, 255, 6);
} */

        .bg {
            /* The image used */
            background-image: url("https://danw.hotglue.me/?webdesign.head.14452090501");
            /* Full height */
            position: absolute;
            height: 100%;
            width: 100%;
            left: 0;

            margin: 0px;
            padding: 0px;

            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .input-fields {
            width: 40%;
            text-align: center;
        }

        #btn-update {
            margin-top: 5px;
            background-color: black;
            border-color:rgba(189, 211, 21, 0.65);
        }

        #content {
			/* Rounded corners */
			border-radius: 75px;

			padding-top:20px; 
			padding-bottom:20px; 
			margin-top: 20px;
			margin-left:5%; 
			margin-right:5%;
			background-color: rgba(49, 3, 9, 0.3)
		}

        #roomsTable {
			margin-bottom: 0px;
		}

        #viewrooms-btn {
            padding-top: 20px;
            text-align: center;
        }

        #viewrooms-btn>a {
            background-color: burlywood;
            border: none;
        }
    </style>

</head>

<body>
    <div class="container bg">
        
        <!-- Navigation Bar -->
        <div class="container-fluid">
            <div class="row" id="header">

                <!-- Use nav-pills, nav-tabs. To center tabs add nav-justified to the class for ul -->
                <ul class="nav nav-pills">

                    <div class="nav nav-pills col-lg-3 col-md-3 col-sm-3 col-xs-3">
                        <% if(userData != 'undefined' && userType != 'client') { %>
                        <li class="text-center"><a href="../staff/schedule">SCHEDULE</a></li>
                        <% } else { %>
                        <li class="text-center"><a href="/">HOME</a></li>
                        <% } %>
                    </div>

                    <div class="nav nav-pills col-lg-3 col-md-3 col-sm-3 col-xs-4">
                        <li class="text-center"><a href="accommodation">ACCOMMODATION</a></li>
                    </div>

                    <div class="nav nav-pills col-lg-3 col-md-3 col-sm-3 col-xs-3">
                        <li class="active text-center"><a href="pricing">PRICING</a></li>
                    </div>

                    <% if(userData != 'undefined') { %>
                    <div class="nav nav-pills col-lg-2 col-md-2 col-sm-2 col-xs-2" id="profile-indicator">
                        <a href="../dashboard"><span class="glyphicon glyphicon-home"></span></a>
                        <p style="margin-bottom: 5px; color:rgba(189, 211, 21, 0.9);">Logged in as <%= userData.user.username %></p>
                    </div>
                    <div class="nav nav-pills col-lg-1 col-md-1 col-sm-1 col-xs-2">
                        <a href="/users/logout"><button type="submit" class="btn btn-danger" role="button"
                                id="login-btn">LOGOUT</button></a>
                    </div>
                    <% } else { %>
                    <div class="nav nav-pills col-lg-2 col-md-2 col-sm-2 col-xs-2">
                        
                    </div>
                    <div class="nav nav-pills col-lg-1 col-md-1 col-sm-1 col-xs-2">
                        <a href="/users/login"><button type="submit" class="btn btn-danger" role="button"
                                id="login-btn">LOGIN</button></a>
                    </div>
                    <% } %>
                </ul>

            </div> <!-- header -->
        </div> <!-- container-fluid -->

        <div class="container-fluid" id="content">
            <div class="row" style="color: white">
                <div class="col-lg-4 col-lg-offset-2" style="padding-top: 50px; padding-bottom: 200px;">
                    <div class="container-fluid" style="background-color: rgba(0, 0, 0, 0.7);">
                        <div class="row">
                            <div class="col-lg-12">
                                <p class="h3 text-center">Room Pricing</p>
                            </div>
                        </div>
                        <table class="table table-sm table-dark text-center" id="roomsTable">
                            <thead>
                              <tr>
                                <th scope="col" class="text-center">Room Type</th>
                                <th scope="col" class="text-center">Price Adult</th>
                                <th scope="col" class="text-center">Price Child</th>
                              </tr>
                            </thead>
                            <tbody>
                            <% roomsType.forEach(function(roomType) { %>
                                <tr style="background-color:rgba(189, 211, 21, 0.65)">
                                    <th scope="row" class="text-center"><%= roomType.type %></th>
                                    <td><%= roomType.price_adult %>&euro;</td>
                                    <td><%= roomType.price_child %>&euro;</td>
                                </tr>
                            <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-lg-4 col-lg-offset-1" style="padding-top: 50px;">
                    <div id="change-price">
                        <% if (userType == 'manager' || userType == 'owner') { %>
                            <form role="form" method="POST" action="/rooms/editPrice" id="form1">
                                <div class="form-group">
                                    <select class="form-control pull-left input-fields" id="dropdown_type"
                                        name="dropdown_type">
                                        <option disabled selected>Type</option>
                                        <% roomsType.forEach(function(roomType) { %>
                                        <option><%= roomType.type %></option>
                                        <% }) %>
                                    </select> <br><br>
                                    <select class="form-control pull-left input-fields" id="dropdown_priceClass" name="dropdown_priceClass">
                                        <option disabled selected>Price Class</option>
                                        <option>Price Adult</option>
                                        <option>Price Child</option>
                                    </select> <br><br>
                                    <input type="text" class="form-control priceInput input-fields" placeholder="New price" name="newPrice">
                                    <button type="submit" class="btn btn-warning btn-md pull-left input-fields"
                                        id="btn-update">Update</button>
                                </div>
                             </form>
                        <% } %>
                    </div>
                    <div style="width: 60%;"><% include ./partials/messages %></div>
                </div>
            </div>
        </div>

    </div>

    <!-- Set the data for the hidden inputs -->

</body>

</html>